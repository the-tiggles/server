extends components/base.pug

block title
  title RD2L: Reddit Dota 2 League

block append header
  div.hero-body.has-text-centered
    div.container
      div.columns
        div.column
          figure.image.is-hero.hide-overflow.is-inline-block
            img(src='/assets/rd2l-lame.png')

block contentFull
  section.section
    div.container
      div.columns
        div.column
          div.level
            div.level-item
              h5.title.is-5.has-icon
                span.icon
                  i.fa.fa-info-circle
                | General Info
          div.level
            div.level-item
              ul
                li Individual signups
                li Teams built via draft
                li 8 week BO2 regular season
                li Top teams make playoffs
        div.column
          div.level
            div.level-item
              h5.title.is-5.has-icon
                span.icon
                  i.fa.fa-users
                | Player Culture
          div.level
            div.level-item
              ul
                li Make new friends
                li Grow with your teammates
                li Enjoy community content
                li Play with all skill levels
        div.column
          div.level
            div.level-item
              h5.title.is-5.has-icon
                span.icon
                  i.fa.fa-trophy
                | RD2L Features
          div.level
            div.level-item
              ul
                li Participate in inhouses
                li Play in weekend tourneys
                li Mini leagues between seasons
                li Find Battlecup stacks
