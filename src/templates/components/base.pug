          block header
            header.sticky-header
              a.logo(href="/").bg-img
                img(src="/assets/css/images/brand/logo.svg", alt="RD2L Logo")
              button.hamburger
                span
                span
                span
              .cta-wrapper
                a.cta-btn(href="/register") REGISTER
                if user
                  a(href="/logout") Log Out
                  a(href="/profile/" + user.steamId).text-icon
                    img.circle(src=user.avatar)
                else
                  a(href="/auth/steam").has-icon
                    span.icon.is-small
                      img(src="/assets/css/images/ui/icons/steam-white.svg", alt="steam logo")
