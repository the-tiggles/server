  block bodyFull
    body.layout-default
      block body
        block sidecar
          #sidecar
            span.close.bg-img
              img(src="/assets/css/images/ui/icons/window-close.svg", alt="")
            span.jugg.bg-img
              img(src="/assets/css/images/ui/cutouts/jugg.png", alt="")
            span.spirit.bg-img
              img(src="/assets/css/images/ui/cutouts/earthspirit.png", alt="")
            div.sidecar-wrapper
                
              
              if user
                  div.player-wrapper
                    a(href="/profile/" + user.steamId)
                      div.badge-icon.bg-img
                        img(src=user.avatar)
                    div.name-logout
